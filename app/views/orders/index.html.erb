<%= link_to "Home", root_path %>
<h1>Orders</h1>
<table>
  <tr>
    <th>Id</th>
    <th>Currency</th>
    <th>Gross</th>
    <th>Discount</th>
    <th>Net</th>
    <th>Category</th>
    <th>Details</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
      <td>
      <%= order.id %>
    </td>
    <td>
      <%= order.currency %>
    </td>
    <td>
      <%= order.gross %>
    </td>
    <td>
      <%= order.discount %>
    </td>
    <td>
     <% if order.discount%>
             <%= order.gross - order.discount %>
        <% else %>
            <%= order.gross %>
        <% end%>
    </td>
    <td>
        <% if order.category%>
            <%= order.category.name %>
        <% else %>
            <%= "No category" %>
        <% end%>
    </td>
    <td>
       <%= link_to '>', order %>
    </td>
    </tr>
  <% end %>
</table>
<p> <%= link_to "Create", new_order_path(@order)%> </p>
